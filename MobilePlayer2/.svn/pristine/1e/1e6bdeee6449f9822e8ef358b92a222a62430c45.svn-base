        super.onStop();
        LogUtil.e("onStop--");
    }

    @Override
    protected void onDestroy() {

        //释放资源的时候，先释放子类，在释放父类
        if(receiver != null){
            unregisterReceiver(receiver);
            receiver = null;
        }
        LogUtil.e("onDestroy--");
        super.onDestroy();

    }

    @Override
    public boolean onTouchEvent(MotionEvent event) {
        return super.onTouchEvent(event);
    }
